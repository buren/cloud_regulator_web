      <th>Ip address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @raspberries.each do |raspberry| %>
      <tr>
        <td><%= raspberry.ip_address %></td>
        <td><%= link_to 'Show', raspberry %></td>
