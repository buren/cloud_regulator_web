<!DOCTYPE html>
<html>
<head>
  <title>Cloud Regulator | Group25</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="author" content="Group25">
  <meta name="description" content="Cloud Regulator Web">

  <title>CloudRegulator</title>
  <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/css/bootstrap.min.css", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "http://cdn.oesmith.co.uk/morris-0.4.3.min.css", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "http://cdn.oesmith.co.uk/morris-0.4.3.min.js", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <!-- Side Menu -->
  <a id="menu-toggle" href="#" class="btn btn-primary btn-lg toggle"><i class="fa fa-reorder"></i></a>
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <a id="menu-close" href="#" class="btn btn-default btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
      <li class="sidebar-brand"><%= link_to 'Studiepoolen', '/' %></li>
      <li><%= link_to 'Home', '#top' %></li>
      <li><%= link_to 'About', '#about' %></li>
      <li><%= link_to 'Services', '#services' %></li>
      <li><%= link_to 'Contact', '#contact' %></li>
    </ul>
  </div>
  <!-- /Side Menu -->

  <!-- Full Page Image Header Area -->
  <div id="top" class="header">
    <div class="vert-text">
      <%= yield %>
      <!-- <a href="#about" class="btn btn-default btn-lg">Find Out More</a> -->
    </div>
  </div>
  <!-- /Full Page Image Header Area -->

  <!-- Intro -->
  <div id="about" class="intro">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
          <h2>The tools you need</h2>
          <p class="lead">Studiepoolen provides the tools need for successfull teacher recruitment.</p>
        </div>
      </div>
    </div>
  </div>
  <!-- /Intro -->

  <!-- Services -->
  <div id="services" class="services">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
          <h2>Services</h2>
          <hr>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2 col-md-offset-2 col-sm-6 col-sm-offset-0 text-center">
          <div class="service-item">
            <i class="service-icon fa fa-rocket"></i>
            <h4>Recruit</h4>
            <p>Recruit faster</p>
          </div>
        </div>
        <div class="col-md-2 col-sm-6 text-center">
          <div class="service-item">
            <i class="service-icon fa fa-magnet"></i>
            <h4>Overview</h4>
            <p>Data overview.</p>
          </div>
        </div>
        <div class="col-md-2 col-sm-6 text-center">
          <div class="service-item">
            <i class="service-icon fa fa-shield"></i>
            <h4>Sercure Data</h4>
            <p>Encrytped and secured.</p>
          </div>
        </div>
        <div class="col-md-2 col-sm-6 text-center">
          <div class="service-item">
            <i class="service-icon fa fa-pencil"></i>
            <h4>Data Retention</h4>
            <p>Daily backups.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /Services -->

  <!-- Callout -->
  <div class="callout">
    <div class="vert-text">
      <h1>It should be a lot easier</h1>
    </div>
  </div>
  <!-- /Callout -->


  <!-- Call to Action -->
  <div class="call-to-action">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
          <h3>You will recieve updates as soon as were ready</h3>
        </div>
      </div>
    </div>
  </div>
  <!-- /Call to Action -->

  <!-- Map -->
  <div id="contact" class="map">
    <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Bankgatan+14c,+Lund,+Sweden&amp;aq=t&amp;sll=37.0625,-95.677068&amp;sspn=44.60973,79.013672&amp;ie=UTF8&amp;hq=&amp;hnear=Bankgatan+14C,+223+52+Lund,+Sweden&amp;t=m&amp;z=14&amp;ll=55.69978,13.19537&amp;output=embed"></iframe><br /><small><a href="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=en&amp;geocode=&amp;q=Bankgatan+14c,+Lund,+Sweden&amp;aq=t&amp;sll=37.0625,-95.677068&amp;sspn=44.60973,79.013672&amp;ie=UTF8&amp;hq=&amp;hnear=Bankgatan+14C,+223+52+Lund,+Sweden&amp;t=m&amp;z=14&amp;ll=55.69978,13.19537" style="color:#0000FF;text-align:left"></a></small>
  </div>
  <!-- /Map -->

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
          <ul class="list-inline">
            <li><i class="fa fa-facebook fa-3x"></i></li>
            <li><i class="fa fa-twitter fa-3x"></i></li>
            <li><i class="fa fa-dribbble fa-3x"></i></li>
          </ul>
          <div class="top-scroll">
            <a href="#top"><i class="fa fa-circle-arrow-up scroll fa-4x"></i></a>
          </div>
          <hr>
          <p>Copyright &copy; Studiepoolen 2013</p>
        </div>
      </div>
    </div>
  </footer>
  <!-- /Footer -->
  <% if content_for?(:javascript) %><%= yield :javascript %>><% end %>
</body>
</html>
